<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.joty.mobile.authorization.ChangePasswordActivity">

    <EditText
        android:id="@+id/OldPwd"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:hint="@string/OldPassword"
        android:maxLength="32"
        android:password="true" />


    <EditText
        android:id="@+id/NewPwd"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/OldPwd"
        android:hint="@string/NewPassword"
        android:maxLength="32"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/RepeatNewPwd"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/NewPwd"
        android:hint="@string/RepeatPassword"
        android:maxLength="32"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/cancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/RepeatNewPwd"
        android:text="@string/Cancel" />
    <Button
        android:id="@+id/okBtn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/RepeatNewPwd"
        android:layout_toRightOf="@+id/cancelBtn"
        android:text="@string/Ok" />
</RelativeLayout>
